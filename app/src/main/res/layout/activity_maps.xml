<LinearLayout android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <include layout="@layout/toolbar"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center">
        <Button
            android:id="@+id/btnBenzinske"
            android:layout_width="100dp"
            android:layout_height="60dp"
            android:text="@string/button_benzinske_postaje_tiitle"
            android:layout_marginTop="10dp"
            android:background="@color/primary6"
            android:textColor="#FFFFFF"/>

        <Button
            android:id="@+id/btnServisi"
            android:layout_width="100dp"
            android:layout_height="60dp"
            android:text="@string/button_servisi_title"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:background="@color/primary6"
            android:textColor="#FFFFFF"/>
    </LinearLayout>


        <TextView
            android:id="@+id/tv_lat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/tv_lng"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />


    <fragment xmlns:tools="http://schemas.android.com/tools"
        xmlns:map="http://schemas.android.com/apk/res-auto"
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/map"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="com.example.crespo.vehicleexpenses.Activity.MapsActivity" />


</LinearLayout>
