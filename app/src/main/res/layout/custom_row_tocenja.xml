<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    card_view:cardBackgroundColor="@color/divider2"
    android:layout_margin="20dp"
    card_view:cardElevation="4dp"
    card_view:cardPreventCornerOverlap="false"
    card_view:cardUseCompatPadding="true">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="10dp"
        android:padding="20dp"
        android:background="@color/primary_light2">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_Ime_benzinske"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/primary_text2"
                android:textStyle="bold"
                android:text="Ina"/>



            <TextView
                android:id="@+id/tv_naziv_goriva"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ina"
                android:textStyle="bold"
                android:textColor="@color/secondary_text2"/>



            <TextView
                android:id="@+id/tv_cijena_po_litri"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ina"
                android:textStyle="bold"
                android:textColor="@color/secondary_text2"/>




            <TextView
                android:id="@+id/tv_km_po_l"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:textColor="@color/secondary_text2"/>



        </LinearLayout>




        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="end"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true">



            <TextView
                android:id="@+id/tv_kilometraza"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ina"
                android:textStyle="bold"
                android:textColor="@color/primary_text2"/>


            <TextView
                android:id="@+id/tv_ukupni_trosak"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ina"
                android:textStyle="bold"
                android:textColor="@color/secondary_text2"/>





            <TextView
                android:id="@+id/tv_uzeto_litara"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ina"
                android:textStyle="bold"
                android:textColor="@color/secondary_text2"/>




            <TextView
                android:id="@+id/tv_datum"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ina"
                android:textStyle="bold"
                android:textColor="@color/secondary_text2"/>

        </LinearLayout>






    </RelativeLayout>



</android.support.v7.widget.CardView>