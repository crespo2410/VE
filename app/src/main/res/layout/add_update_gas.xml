<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/activity_main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="com.example.crespo.vehicleexpenses.Activity.UpdateRefuelingExpense">


        <RelativeLayout
            android:id="@+id/rel1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom="@dimen/activity_vertical_margin"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:paddingTop="@dimen/activity_vertical_margin">

            <ImageView
                android:id="@+id/icon_time"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginRight="30dp"
                app:srcCompat="@drawable/ic_date_range_black_24dp" />


            <TextView
                android:id="@+id/date"
                android:layout_width="150dp"
                android:layout_height="20dp"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/icon_time"
                android:text="07/07/12" />

            <TextView
                android:id="@+id/time"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:text="18:22" />


            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_alignStart="@+id/date"
                android:layout_below="@+id/date"
                android:layout_marginTop="10dp"
                android:background="@color/divider2" />


        </RelativeLayout>


        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom="@dimen/activity_vertical_margin"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:paddingTop="@dimen/activity_vertical_margin">

            <ImageView
                android:id="@+id/icon_time2"
                android:layout_width="20dp"
                android:layout_height="20dp"
                app:srcCompat="@drawable/ic_directions_car_black_24dp"
                android:layout_marginRight="30dp"
                android:layout_centerVertical="true"/>


            <TextView
                android:id="@+id/zadnja_kilometraza"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/last_distance"
                android:layout_below="@+id/unos_km"
                android:layout_alignStart="@+id/unos_km"
                android:layout_marginTop="15dp"/>




            <EditText
                android:id="@+id/unos_km"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/gas_distance_hint"
                android:inputType="number"
                android:layout_toRightOf="@+id/icon_time2"
                android:layout_centerVertical="true"

                />


        </RelativeLayout>


        <RelativeLayout
            android:id="@+id/rel2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:paddingBottom="@dimen/activity_vertical_margin"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:paddingTop="@dimen/activity_vertical_margin"
            >

            <ImageView
                android:id="@+id/icon_time3"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginRight="30dp"
                app:srcCompat="@drawable/ic_euro_symbol_black_24dp"
                android:layout_centerVertical="true"
                />


            <EditText
                android:id="@+id/b"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/icon_time3"
                android:inputType="numberDecimal"
                android:hint="@string/tocenje_cijena_hint"

                />

            <EditText
                android:id="@+id/c"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="@string/tocenje_ukupni_trosak_hint"
                android:inputType="numberDecimal"
                android:layout_toRightOf="@+id/b"
                android:layout_marginLeft="10dp"/>



            <EditText
                android:id="@+id/d"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="@string/tocenje_uzeto_litara_hint"
                android:inputType="numberDecimal"
                android:layout_toRightOf="@+id/c"
                android:layout_marginLeft="10dp"/>

        </RelativeLayout>






        <RelativeLayout
            android:id="@+id/rel8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:paddingBottom="@dimen/activity_vertical_margin"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:paddingTop="@dimen/activity_vertical_margin"
            >

            <ImageView
                android:id="@+id/icon_time9"
                android:layout_width="20dp"
                android:layout_height="20dp"
                app:srcCompat="@drawable/ic_info_black_24dp"
                android:layout_centerVertical="true"
                android:layout_marginRight="30dp"
                />


            <Spinner
                android:id="@+id/spinner_gorivo"
                android:layout_width="240dp"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/icon_time9"
                android:layout_centerVertical="true">

            </Spinner>




            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/divider2"
                android:layout_below="@+id/spinner_gorivo"
                android:layout_alignStart="@+id/spinner_gorivo"
                android:layout_marginTop="10dp"/>


            <ImageView
                android:id="@+id/icon_spinner_gorivo"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_toRightOf="@+id/spinner_gorivo"
                app:srcCompat="@drawable/ic_add_box_black_24dp"
                android:layout_marginLeft="1dp"/>

        </RelativeLayout>




        <RelativeLayout
            android:id="@+id/rel3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:paddingBottom="@dimen/activity_vertical_margin"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:paddingTop="@dimen/activity_vertical_margin"
            >

            <ImageView
                android:id="@+id/icon_time4"
                android:layout_width="20dp"
                android:layout_height="20dp"
                app:srcCompat="@drawable/gas_station"
                android:layout_marginRight="30dp"
                android:layout_alignBottom="@+id/spinner_obrtnik"
                android:layout_alignParentStart="true" />


            <Spinner
                android:id="@+id/spinner_benzinska"
                android:layout_width="240dp"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/icon_time4"
                android:layout_centerVertical="true">

            </Spinner>




            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/divider2"
                android:layout_below="@+id/spinner_benzinska"
                android:layout_alignStart="@+id/spinner_benzinska"
                android:layout_marginTop="10dp"/>


            <ImageView
                android:id="@+id/icon_spinner_ben"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_toRightOf="@+id/spinner_benzinska"
                app:srcCompat="@drawable/ic_add_box_black_24dp"
                android:layout_marginLeft="1dp"/>

        </RelativeLayout>






        <RelativeLayout
            android:id="@+id/rel4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:paddingBottom="@dimen/activity_vertical_margin"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:paddingTop="@dimen/activity_vertical_margin"
            >

            <ImageView
                android:id="@+id/icon_time5"
                android:layout_width="20dp"
                android:layout_height="20dp"
                app:srcCompat="@drawable/ic_local_offer_black_24dp"
                android:layout_centerVertical="true"
                android:layout_marginRight="30dp"
                />


            <Spinner
                android:id="@+id/spinner_razlog"
                android:layout_width="240dp"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/icon_time5"
                android:layout_centerVertical="true">

            </Spinner>




            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/divider2"
                android:layout_below="@+id/spinner_razlog"
                android:layout_alignStart="@+id/spinner_razlog"
                android:layout_marginTop="10dp"/>


            <ImageView
                android:id="@+id/icon_spinner_razlog"
                android:layout_width="20dp"
                android:layout_height="20dp"
                app:srcCompat="@drawable/ic_add_box_black_24dp"
                android:layout_marginLeft="1dp"
                android:layout_alignParentTop="true"
                android:layout_toEndOf="@+id/spinner_razlog" />



        </RelativeLayout>






        <RelativeLayout
            android:id="@+id/rel100"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:paddingBottom="@dimen/activity_vertical_margin"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:paddingTop="@dimen/activity_vertical_margin"
            >

            <ImageView
                android:id="@+id/icon_time500"
                android:layout_width="20dp"
                android:layout_height="20dp"
                app:srcCompat="@drawable/ic_note_black_24dp"
                android:layout_centerVertical="true"
                android:layout_marginRight="30dp"
                />

            <EditText
                android:id="@+id/biljeske_dodavanje"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/notes_title"
                android:layout_toRightOf="@+id/icon_time500"/>

        </RelativeLayout>



    </LinearLayout>
    </LinearLayout>
</ScrollView>