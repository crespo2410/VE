<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">


<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="Fragments.UpdateReminderFragment"
    android:orientation="vertical">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


    <ImageView
        android:id="@+id/icon_tip_podsjetnika"
        android:layout_width="20dp"
        android:layout_height="20dp"
        app:srcCompat="@drawable/ic_info_black_24dp"
        android:layout_marginRight="30dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />


    <Spinner
        android:id="@+id/spinner_tip_podsjetnika"
        android:layout_width="240dp"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/icon_tip_podsjetnika">

    </Spinner>




    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/divider2"
        android:layout_below="@+id/spinner_tip_podsjetnika"
        android:layout_alignStart="@+id/spinner_tip_podsjetnika"
        android:layout_marginTop="10dp"/>


    </RelativeLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp">

    <ImageView
        android:id="@+id/icon_tip_podsjetnika2"
        android:layout_width="20dp"
        android:layout_height="20dp"
        app:srcCompat="@drawable/ic_info_black_24dp"
        android:layout_marginRight="30dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />


    <Spinner
        android:id="@+id/spinner_tip_podsjetnika2"
        android:layout_width="240dp"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/icon_tip_podsjetnika2">

    </Spinner>




    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/divider2"
        android:layout_below="@+id/spinner_tip_podsjetnika2"
        android:layout_alignStart="@+id/spinner_tip_podsjetnika2"
        android:layout_marginTop="10dp"/>


        <ImageView
            android:id="@+id/icon_spinner_novo"
            android:layout_width="25dp"
            android:layout_height="26dp"
            android:layout_marginLeft="1dp"
            android:layout_toRightOf="@+id/spinner_tip_podsjetnika2"
            app:srcCompat="@drawable/ic_add_box_black_24dp" />


    </RelativeLayout>


    <EditText
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:id="@+id/alertContent"
        android:inputType="textMultiLine"
        android:gravity="start"
        android:hint="@string/notes_title"
        android:layout_marginTop="20dp"/>

    <ListView
        android:id="@+id/reminderSettings"
        android:layout_width="match_parent"
        android:layout_height="197dp"
        android:layout_below="@+id/alertContent" />

</LinearLayout>
</ScrollView>