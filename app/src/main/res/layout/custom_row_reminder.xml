<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    card_view:cardBackgroundColor="@color/divider4"
    android:layout_margin="20dp"
    card_view:cardElevation="4dp"
    card_view:cardPreventCornerOverlap="false"
    card_view:cardUseCompatPadding="true">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="10dp"
        android:padding="20dp"
        android:background="@color/primary_light2">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_NaslovObavijesti"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/primary_text4"
                android:textStyle="bold"
                android:text="Ina"/>


            <ImageView
                android:id="@+id/iconObavijest"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                card_view:srcCompat="@drawable/ic_add_alert_black_24dp"/>

            <TextView
                android:id="@+id/tv_BiljeskeObavijesti"
                android:layout_marginTop="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Promijeni gume"/>

        </LinearLayout>




        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="end"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true">



            <TextView
                android:id="@+id/tv_DatumObavijesti"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="20/2/2017"
                android:textStyle="bold"
                android:textColor="@color/primary_text4"/>








        </LinearLayout>






    </RelativeLayout>



</android.support.v7.widget.CardView>
