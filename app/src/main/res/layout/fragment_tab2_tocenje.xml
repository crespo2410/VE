<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:fillViewport="true">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="Fragments.Tab1Opcenito"
        android:orientation="vertical"
        android:layout_margin="20dp">


        <TextView
            android:id="@+id/brojTocenjaS"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2 usluge u 6 dana"
            android:textAppearance="?android:textAppearanceMedium"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="20dp"/>


        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:text="@string/troskovi"
            android:textStyle="bold"/>


        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_above="@+id/row1"
            android:background="@color/divider2"
            android:layout_marginRight="40dp"/>


        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center">



            <TextView
                android:id="@+id/textView7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="@string/ukupno" />

            <TextView
                android:id="@+id/textViewUkupnoT"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="5dp"
                android:layout_toRightOf="@+id/textView7"
                android:text="23,000 HRK"
                android:textStyle="bold" />


            <TextView
                android:id="@+id/textView6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_below="@+id/textView7"
                android:layout_alignStart="@+id/textView7"
                android:text="@string/dnevno" />


            <TextView
                android:id="@+id/textViewDnevnoT"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_toRightOf="@id/textView6"
                android:layout_below="@id/textViewUkupnoT"
                android:layout_marginLeft="5dp"
                android:text="3,8233 HRK"
                android:textStyle="bold" />


            <TextView
                android:id="@+id/textViewTocenjekm"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_below="@id/textView6"
                android:layout_alignStart="@id/textView6"
                android:text="@string/po_jed_udaljenosti" />


            <TextView
                android:id="@+id/textViewkmT"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_toRightOf="@id/textViewTocenjekm"
                android:layout_below="@id/textViewDnevnoT"
                android:layout_marginLeft="5dp"
                android:text="0,027 HRK"
                android:textStyle="bold" />

        </RelativeLayout>


        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_below="@+id/row3"
            android:background="@color/divider2"
            android:layout_marginRight="40dp"/>







    <TableLayout
        android:id="@+id/layout2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="30dp"
        android:layout_below="@+id/lay1">

        <TableRow>

            <TextView
                android:id="@+id/textViewTocenje1"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:text="@string/gorivo"
                android:textStyle="bold" />
        </TableRow>



        <TableRow>

            <TextView
                android:id="@+id/textViewTocenjeNaziv"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:text="Benzin:"
                android:textStyle="bold"
                android:gravity="center"/>
        </TableRow>

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_above="@+id/rowTable1"
            android:background="@color/divider2"
            android:layout_marginRight="40dp"/>


        <TableRow
            android:id="@+id/rowTable1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_horizontal">


            <TextView
                android:id="@+id/textViewTocenjeLitara"
                android:layout_height="match_parent"
                android:gravity="left"
                android:text="@string/potroseno" />

            <TextView
                android:id="@+id/textViewTocenjePotrosnja"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:text="potrosnja/km" />

        </TableRow>

        <TableRow android:id="@+id/rowTable3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal">

            <TextView
                android:id="@+id/textViewUkupnoLit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:text="23,000 L"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textViewProskm"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:text="12,5 l/km"
                android:textStyle="bold" />


        </TableRow>

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_below="@+id/rowTable3"
            android:background="@color/divider2"
            android:layout_marginRight="40dp"/>


        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal">

            <TextView
                android:id="@+id/textViewTocenjePotrosnja100"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:text="potrosnja/100km" />

        </TableRow>


        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal">

            <TextView
                android:id="@+id/textViewPros100km"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:text="12,4 l/100km"
                android:textStyle="bold" />
        </TableRow>


        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_below="@+id/rowTable3"
            android:background="@color/divider2"
            android:layout_marginRight="40dp"/>

    </TableLayout>






            <TextView
                android:id="@+id/textView0"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_marginTop="20dp"
                android:text="@string/grafikoni"
                android:textStyle="bold"/>

        <Spinner
            android:id="@+id/spinner_grafikon_novi"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_marginRight="40dp"
            android:layout_below="@+id/textView0">

        </Spinner>

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@color/divider2"
            android:layout_below="@+id/row5"
            android:layout_marginRight="40dp"/>


    </LinearLayout>

    </android.support.v4.widget.NestedScrollView>